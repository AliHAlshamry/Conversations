<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="8dp"
        android:background="@drawable/rounded_corner_dialog"
        android:paddingVertical="24dp"
        android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/destroy_room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destroy_room"
                android:textColor="@color/txt_color1"
                android:fontFamily="@font/roboto_medium"
                android:textFontWeight="500"
                android:textSize="20sp"
                android:layout_marginBottom="27dp"/>
        <TextView
            android:id="@+id/destroy_room_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:text="@string/destroy_room_dialog"
            android:textColor="@color/txt_color3"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/cancel_button"
                style="@style/Widget.Conversations.Button.Borderless"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_button_gray"
                android:text="@string/cancel"
                android:textColor="@color/txt_color1"
                android:layout_marginRight="11dp"
                android:fontFamily="@font/roboto_medium"
                android:textAllCaps="false"
                android:textFontWeight="500"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/destroy_room_button"
                style="@style/Widget.Conversations.Button.Borderless"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_button_blue"
                android:textColor="@color/white"
                android:text="@string/ok"
                android:fontFamily="@font/roboto_medium"
                android:textAllCaps="false"
                android:textFontWeight="500"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>