<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/bottom_sheet_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="50dp"
            android:paddingVertical="32dp"
            android:rowCount="3">

            <RelativeLayout
                android:background="@drawable/sheet_header_rectangle"
                android:layout_width="60dp"
                android:layout_height="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_attach_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circular_background_blue"
                android:src="@drawable/ic_gallery_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:lineHeight="18dp"
                android:gravity="center"
                android:text="@string/attach_image"
                android:textColor="@color/txt_color2"
                android:textFontWeight="400"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_attach_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circular_background_blue"
                android:src="@drawable/ic_camera_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:lineHeight="18dp"
                android:text="@string/attach_capture_photo"
                android:textColor="@color/txt_color2"
                android:textFontWeight="400"
                android:textSize="12sp" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_attach_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/circular_background_blue"
                    android:src="@drawable/ic_camera_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:lineHeight="18dp"
                    android:text="@string/attach_capture_video"
                    android:textColor="@color/txt_color2"
                    android:textFontWeight="400"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_attach_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circular_background_blue"
                android:src="@drawable/ic_folder_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:text="@string/attach_file"
                android:textColor="@color/txt_color2"
                android:textFontWeight="400"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_attach_voice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circular_background_blue"
                android:src="@drawable/ic_microphone_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:lineHeight="18dp"
                android:text="@string/attach_voice"
                android:textColor="@color/txt_color2"
                android:textFontWeight="400"
                android:textSize="12sp" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_attach_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/circular_background_blue"
                    android:src="@drawable/ic_location_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:lineHeight="18dp"
                    android:text="@string/attach_location"
                    android:textColor="@color/txt_color2"
                    android:textFontWeight="400"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_close"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:text="x"
            android:visibility="gone" />


    </RelativeLayout>

</layout>
